      "parameters": {
        "jsCode": "// Error-Informationen extrahieren\nconst execution = $input.first().json.execution;\nconst error = $input.first().json.error;\n\nconst errorDetails = {\n  workflow_id: execution.workflowId,\n  workflow_name: execution.workflowData?.name || 'Unbekannt',\n  execution_id: execution.id,\n  error_message: error.message,\n  error_node: error.node?.name || 'Unbekannt',\n  error_type: error.name || 'Error',\n  stack_trace: error.stack || '',\n  timestamp: new Date().toISOString(),\n  execution_mode: execution.mode,\n  severity: error.message.includes('critical') ? 'critical' : 'warning'\n};\n\nconsole.error('Workflow-Fehler aufgetreten:', errorDetails);\n\nreturn [{ json: errorDetails }];"
      },
